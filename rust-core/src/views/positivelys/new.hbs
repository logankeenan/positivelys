{{#> application_layout}}
    {{#*inline "page_title"}}New Positively{{/inline}}
    {{#*inline "page_content"}}
        <section class="container">
            <form method="POST" action="https://positivelys.com/positivelys" class="my-3">
                <div class="form-group">
                    <label class="sr-only" for="moment">Moment</label>
                    <textarea
                            class="form-control"
                            id="moment"
                            name="moment"
                            placeholder="What's positive about today?"
                            rows="3"></textarea>
                </div>
                <div class="clearfix">
                    <button type="submit" class="btn btn-primary float-right">Create</button>
                </div>
            </form>
        </section>

    {{/inline}}
{{/application_layout}}

