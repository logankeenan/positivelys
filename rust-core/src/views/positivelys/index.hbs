{{#> application_layout}}
    {{#*inline "page_content"}}
        <style>
            body {
                background: #f0f2f5;
            }

            .font-12 {
                font-size: 12px;
            }

        </style>
        <section class="container mt-2">
            <form method="POST" action="/positivelys" class="mb-3">
                <div class="form-group">
                    <label class="sr-only" for="moment">Moment</label>
                    <textarea
                            class="form-control"
                            id="moment"
                            name="moment"
                            placeholder="What's something positive about today?"
                            rows="3"></textarea>
                </div>
                <div class="clearfix">
                    <button type="submit" class="btn btn-primary float-right">Submit</button>
                </div>
            </form>

            <ul class="list-unstyled">
                {{#each positivelys as |positively|}}

                    <li class="my-2 pt-1 p-3 bg-white shadow-sm rounded-sm font-weight-bold">
                        <div class="mt-n2 pb-2 font-12 text-muted font-weight-lighter">
                            {{fmt_positively_time positively.created_at}}
                        </div>
                        {{positively.moment}}

                    </li>
                {{/each}}
            </ul>
        </section>

    {{/inline}}
{{/application_layout}}

