<script src="https://unpkg.com/morphdom@2.6.1/dist/morphdom-umd.min.js"></script>
<script>

    async function makeWebAppRequest(url, method, bodyAsJson) {
        let response;

        if (method.toLowerCase() === "get") {
            response = await fetch(url);
        } else if (method.toLowerCase() === "post") {
            response = await fetch(url, {
                method: 'POST',
                redirect: 'follow',
                body: bodyAsJson
            });
        }

        const htmlResponse = await response.text();
        morphdom(document.documentElement, htmlResponse);
        history.pushState(undefined, undefined, response.url);
    }

    async function makeAppRequest(url, method = 'GET', body = "") {
        if (window.webkit) {
            window.webkit.messageHandlers.makeAppRequest.postMessage({
                url: url, method: method, body: body
            });
        } else {
            await makeWebAppRequest(url, method, body)
        }
    }

    document.addEventListener('submit', async function (event) {
        event.preventDefault();

        const formData = new FormData(event.target);
        const data = Object.fromEntries(formData.entries());

        await makeAppRequest(event.target.action, event.target.method, JSON.stringify(data))
    });

    document.addEventListener('click', async function (event) {
        let anchorTag = event.target;
        if (anchorTag.tagName.toLowerCase() === "a") {
            event.preventDefault();

            await makeAppRequest(anchorTag.href)
        }
    });

    window.addEventListener('popstate', async function (event) {
        let url = event.target.location.toString();

        await makeAppRequest(url)
    });


</script>
</body>
</html>