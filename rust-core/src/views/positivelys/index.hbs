{{#> application_layout}}
    {{#*inline "page_content"}}
        <section class="container">
            <form method="POST" action="/positivelys">
                <div class="form-group">
                    <label class="sr-only" for="moment">Moment</label>
                    <textarea
                            class="form-control"
                            id="moment"
                            name="moment"
                            placeholder="What's something positive about today?"
                            rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary float-right">Submit</button>
            </form>
        </section>
        <ul>
            {{#each positivelys as |positively|}}
                <li>
                    {{positively.moment}}
                    <br>
                    {{positively.created_at}}<br>
                    {{positively.updated_at}}<br>
                    {{positively.id}}
                </li>

            {{/each}}
        </ul>
    {{/inline}}
{{/application_layout}}

