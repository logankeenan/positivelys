        <div class="bg-white border-bottom-gray">
            <div class="container py-3">
                <div class="row ">
                    <div class="col-10 text-black-50">
                        <a href="https://positivelys.com/positivelys/new"
                           class="text-decoration-none text-reset px-3 py-2 rounded border d-inline-block w-100">
                            What's positive about today?
                        </a>
                    </div>
                    <div class="col-2 pr-0">
                        <div class="d-flex align-items-center h-100">
                            <span class="{{animation_class}} font-22 badge badge-primary">
                                {{todays_total}}
                            </span>
                        </div>

                    </div>

                </div>
            </div>
        </div>


        <section class="container px-0 mt-2">
            {{#if positivelys}}
                <ul class="list-unstyled">
                    {{#each positivelys as |positively|}}

                        <li class="my-2 pt-1 p-3 bg-white shadow-sm font-weight-bold">
                            <div class="mt-n2 pb-2 font-12 text-muted font-weight-lighter">
                                {{fmt_positively_time positively.created_at}}


                                <div class="float-right clearfix">
                                    <div class="dropdown">
                                        <button class="btn btn-link btn-sm text-muted dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            &bull;&bull;&bull;
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                            <span class="dropdown-item">
                                                <a class="btn btn-link" href="https://positivelys.com/positivelys/{{id}}/edit">Edit</a>
                                            </span>
                                            <form action="https://positivelys.com/positivelys/{{id}}/delete" method="POST" class="dropdown-item">
                                                <input type="submit" class="btn btn-link" value="Delete" />
                                            </form>

                                        </div>
                                    </div>
                                </div>


                            </div>
                            {{positively.moment}}
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <div class="bg-white">
                    <p class="bg-white my-2 pt-0 p-3">
                        <span class="font-weight-bold">Positivelys</span> creates a habit out of positive thinking.
                        Create Positivelys every day and as often as you can.
                    </p>
                </div>
            {{/if}}

