{{#> application_layout}}
    {{#*inline "page_title"}}New Positively{{/inline}}
    {{#*inline "page_content"}}
        <section class="container">
            <form method="POST" action="https://positivelys.com/positivelys" class="my-3">
                <div class="form-group">
                    <label class="sr-only" for="moment">Moment</label>
                    <textarea
                            class="form-control"
                            id="moment"
                            name="moment"
                            placeholder="What's positive about today?"
                            rows="3"></textarea>
                        <input type="hidden" name="media_file_location" id="media_file_location" value="">
                </div>
                <div class="clearfix">
                    <button
                            type="button"
                            class="btn btn-outline-dark float-left"
                            data-image-picker="true"
                            data-image-picker-result="media_file_location"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-card-image" viewBox="0 0 16 16">
                            <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                            <path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54A.505.505 0 0 1 1 12.5v-9a.5.5 0 0 1 .5-.5h13z"/>
                        </svg>
                        Image
                    </button>

                    <button type="submit" class="font-weight-bold btn btn-primary float-right">Create</button>
                </div>

            </form>
            <div class="position-relative d-none">
                <button
                        type="button"
                        class="bg-transparent p-0 font-weight-bold text-white border-0 position-absolute"
                        style="right: 10px; top: 10px;"
                        onclick="clearImagePickerPreview();"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </button>
                <img src="" width="100%" height="auto" alt="" id="image-picker-preview">
            </div>
            <script>
                function clearImagePickerPreview() {
                    let imagePickerPreview = document.getElementById('image-picker-preview');
                    imagePickerPreview.parentElement.classList.add('d-none');
                    imagePickerPreview.src = ""

                    document.getElementById('media_file_location').value = "";
                }
            </script>
        </section>

    {{/inline}}
{{/application_layout}}

